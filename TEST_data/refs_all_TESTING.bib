Ghosh, Subimal/0000-0002-5722-1440},
 pages = {495-516},
 researcherid-numbers = {Shastri, Hiteshri/AAH-1728-2020
},
 title = {Impacts of urbanization on Indian summer monsoon rainfall extremes},
